<resources>


    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme.NoActionbar" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="torrent_seed_leech_down">
        <item name="android:layout_weight">.33</item>
        <item name="android:textSize">10dp</item>
        <item name="android:textColor">#777</item>
        <item name="android:gravity">right</item>
    </style>

    <style name="torrent_seed_leech_down_box">
        <item name="android:background">@drawable/torrent_item_bg_even</item>
        <item name="android:height">32dp</item>
        <item name="android:width">40dp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:textSize">10dp</item>
        <item name="android:layout_marginLeft">1px</item>
    </style>

    <style name="login_input_text">
        <item name="android:background">@drawable/login_input_bg</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:maxWidth">250dp</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">#000</item>
        <item name="android:typeface">normal</item>
    </style>
    
    <style name="login_input_btn">
        <item name="android:background">@drawable/login_btn_bg</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">14dp</item>
        <item name="android:height">32dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:singleLine">true</item>
    </style>

</resources>
